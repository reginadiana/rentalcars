<h3 class="link-to-back"><%= link_to 'Voltar', root_path %></h3>

<div class="customers-div">
	<h1>Carros Cadastrados</h1>

	<% if current_user.admin? %>
		<h3><%= link_to 'Registrar novo carro', new_car_path%></h3>
	<% end %>

	<% if @cars.empty? %>
		<%= 'Nenhum carro cadastrado' %>
	<% end %>

	<% @cars.each do |car| %>
		<div class="each-manufacturer">
			<%= link_to car.license_plate, car %>
		</div>
	<% end %>
</div>
