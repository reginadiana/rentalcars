
	<div>
		<%= link_to 'Voltar', car_categories_path %>
		
		<h2>Categoria <%= @car_category.name %></h2>
		
		<dl>
			<dt>Diaria:</dt>
			<dd><%= number_to_currency @car_category.daily_rate %></dd>

			<dt>Seguro do Carro:</dt>
			<dd><%= number_to_currency @car_category.car_insurance %></dd>

			<dt>Seguro para Terceiros:</dt>
			<dd><%= number_to_currency @car_category.third_part_insurance %></dd>
			
			<dt>Editar categoria</dt>
			<dd><%= link_to 'Editar', edit_car_category_path(@car_category) %></dd>

		</dl>
		
		<% if @car_category.car_models.any? %>
			<h3>Modelos de Carros</h3>
			<% @car_category.car_models.each do |car_model|%>
				<%= link_to car_model.name, car_model%>		
			<% end %>
		<% else %>
			<%= 'Sem modelos cadastrados' %>	
		<% end %>
		
	</div>

