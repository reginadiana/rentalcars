<h1>Clientes</h1>

<%= link_to 'Voltar', root_path %>

<li><%= link_to 'Cadastrar Cliente', new_customer_path%></li>

<%= form_with url: search_customers_path, method: :get do |f| %>
  <%= f.label :q, 'Busca' %>
  <%= f.search_field :q %>
  <%= f.submit 'Buscar' %>
<% end %>

<% if @customers.empty? %>
	<%= 'Nenhuma locação registrada' %>
<% end %>

<% if @customers.any? %>
	<table>
	  <thead>
	    <tr>
	      <th>Nome</th>
	      <th>Email</th>
	      <th>CPF</th>
	      <th></th>
	      <th></th>
	     </tr>
	  </thead>
	  <tbody>
	    <% @customers.each do |customer| %>
	      <tr id="customer-<%= customer.id %>">
		<td><%= customer.name %></td>
		<td><%= customer.email %></td>
		<td><%= customer.document %></td>
		<td><%= link_to 'Editar', edit_customer_path(customer), id: "edit-#{customer.id}" %></td>
		<td><%= link_to 'Excluir', customer_path(customer), method: :delete, id: "delete-#{customer.id}" %></td>
	      </tr>
	    <% end %>
	  </tbody>
	</table>
<% end %>
