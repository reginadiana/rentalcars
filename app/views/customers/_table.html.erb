<table>
	<thead>
		<tr>
			<th><%= I18n.t('activerecord.models.customer') %></th>
			<th><%= Customer.human_attribute_name(:email) %></th>
			<th><%= Customer.human_attribute_name(:document) %></th>
			<th></th>
			<th></th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @customers.each do |customer| %>
			<tr id="customer-<%= customer.id %>">
				<td><%= customer.name %></td>
				<td><%= customer.email %></td>
				<td><%= customer.document %></td>
				<td>
					<%= link_to 'Locações', customer_path(customer), id: "show-#{customer.id}" %>
				</td>
				<td class="link-editar">
					<%= link_to 'Editar', edit_customer_path(customer), id: "edit-#{customer.id}" %>
				</td>
				<td class="link-excluir">
					<%= link_to 'Excluir', customer_path(customer), method: :delete, id: "delete-#{customer.id}" %>
				</td>
		      </tr>
		<% end %>
	</tbody>
</table>

